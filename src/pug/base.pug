doctype html
html(lang='ru')
	include mixins/mixins
	block vars
	head
		meta(charset='UTF-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		title= metaTitle
		meta(name='description', content= metaDescription)
		meta(name='robots', content='noindex, nofollow')
		link(href='/dist/css/style.css', rel='stylesheet')
		link(rel='shortcut icon', href='/dist/img/favicon.ico')
		link(rel='apple-touch-icon', href='/dist/img/favicon.ico')
	body(class= pageName)
		.overlay
		.wrapper
			include block/header
			block content
			include block/footer
			button(id="toTop")
				include ../img/btn-arrow.svg
		script(src='/dist/libs/jquery.min.js')
		script(src='/dist/libs/swiper-bundle.min.js')
		script(src='/dist/libs/isotope.min.js')
		script(src='/dist/libs/imagesloaded.min.js')
		script(src='/dist/libs/fancybox.min.js')
		if pageName === 'contacts-page'
			script(async src='https://api-maps.yandex.ru/2.1/?load=package.standard&lang=ru_RU&scroll=false&onload=getYaMap')
		script(src='/dist/js/main.js')
