extends ../base

block vars
	-let pageName = 'reviews-page'
	-let pageTitle = 'Обзоры'
	-let metaTitle = 'Обзоры | GMNG'
	-let metaDescription = 'Обзоры производителя широкого спектра устройств для геймеров с разным опытом GMNG'
block content
		include ../includes/reviews-list
		main.main
			section.reviews
				.container
					+breadcrumbs
					h1.reviews__title.h2= pageTitle
					ul.reviews__filters.filters-cat
						li 
							button.filter-btn.filter-btn--active(data-filter="*") Все товары
						each element in groupList
							if element.class !== 'monitors'
								li
									button.filter-btn(data-filter="." + element.class)= element.name
					ul.reviews__list.grid
						each element in reviewsList
							li.reviews__item.grid-item(class= element.group)
								a.reviews__link(href= element.link) 
									picture.reviews__image
										source(type='image/webp' srcset= element.image + '.webp')
										source(type='image/jpg' srcset= element.image + '.jpg')
										img(src= element.image + '.jpg', alt= element.title)
									span.reviews__name= element.title

