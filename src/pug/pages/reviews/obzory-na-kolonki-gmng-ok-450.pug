extends ../../base


block vars
	-let pageName = 'reviews-item-page'
	-let metaTitle = 'Обзоры на колонки GMNG OK-450'
	-let metaDescription = 'Обзоры на товары бренда GMNG. Здесь представлены отзывы популярных блогеров на официальную продукцию GMNG'
	-let itemID = '1531948'
	-let pageTitle = 'Обзоры на колонки GMNG OK-450'
block content
		include ../../includes/reviews-list
		main.main
			section.review
				.review__container.container
					+breadcrumbs(2, 'Обзоры', 'reviews')
					.review__inner
						.review__image 
							picture
								source(type='image/webp', srcset= '/dist/img/catalog/items/' + itemID + '_main' + '.webp')
								source(type='image/jpg', srcset= '/dist/img/catalog/items/' + itemID + '_main' + '.jpg')
								img(src= '/dist/img/catalog/items/' + itemID + '_main' + '.jpg', alt= pageTitle)
						.review__content 	
							each element in reviewsList
								if element.id === itemID
									h1.review__title.h3= element.title
							.review__user-content
								h2 Обзор от Вейни
								a(data-fancybox, href="https://youtube.com/watch?v=kpJT1Qk3ZME") Ознакомиться с обзором
			include ../../block/reviews-also
